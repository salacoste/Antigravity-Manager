# Required
ABV_API_KEY=replace-with-strong-random-api-key
ABV_WEB_PASSWORD=replace-with-strong-random-ui-password
ABV_DOMAIN=antigravity.example.com

# Optional
ABV_IMAGE=antigravity-manager:latest
ABV_DATA_DIR=~/.antigravity_tools
RUST_LOG=info
ABV_AUTH_MODE=strict
ABV_MAX_BODY_SIZE=104857600
ABV_CORS_ALLOW_ORIGINS=https://antigravity.example.com

# Nginx mode (host Nginx -> container localhost)
ABV_LOCAL_BIND_ADDR=127.0.0.1
ABV_LOCAL_BIND_PORT=18045

# Traefik mode
TRAEFIK_PUBLIC_NETWORK=traefik-public
TRAEFIK_CERT_RESOLVER=letsencrypt
